<Window x:Class="Chuck.Windows.GetInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GetInput" Height="151" Width="254">
    <Grid FocusManager.FocusedElement="{Binding ElementName=txtInput}">
        <Label Name="lblName" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtInput" HorizontalAlignment="Left" Height="26" Margin="10,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="222"/>
        <Button IsDefault="True" Content="Submit" HorizontalAlignment="Left" Margin="88,75,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
