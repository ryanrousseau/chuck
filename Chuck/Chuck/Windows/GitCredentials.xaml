<Window x:Class="Chuck.Windows.GitCredentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git Credentials" Height="171" Width="314" ResizeMode="NoResize">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtUser" HorizontalAlignment="Left" Height="26" Margin="78,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <PasswordBox Name="txtPass" PasswordChar="*"  HorizontalAlignment="Left" Margin="78,75,0,0" VerticalAlignment="Top" Width="205" Height="26"/>
        <Button Name="btnSubmit" Click="BtnSubmit_OnClick"  Content="Submit" HorizontalAlignment="Left" Margin="208,106,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Name="lblPreviousFail" Visibility="Hidden" Content="Previous login failed, check username / password." HorizontalAlignment="Left" Margin="12,9,0,0" VerticalAlignment="Top" FontFamily="Arial" Foreground="#FFF30808"/>
    </Grid>
</Window>
