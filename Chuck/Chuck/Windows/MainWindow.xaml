<Window x:Class="Chuck.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chuck Testa" Height="720" Width="697"
        >
    <Grid>
        <Ellipse HorizontalAlignment="Left" Height="72" Margin="-37,-32,0,0" Stroke="#FFC79C9C" VerticalAlignment="Top" Width="72" RenderTransformOrigin="0.5,0.5" >
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="35.727"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.372"/>
                    <GradientStop Color="#FFC549F3" Offset="0.938"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
            <Ellipse.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF512121" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.OpacityMask>
            <Ellipse.Effect>
                <DropShadowEffect/>
            </Ellipse.Effect>
        </Ellipse>
        <Label Content="{Binding Flair}" HorizontalAlignment="Left" Margin="115,37,0,0" VerticalAlignment="Top" Width="187"/>
        <Button Content="OpenTestDetailView" HorizontalAlignment="Left" Height="35" Margin="521,37,0,0" VerticalAlignment="Top" Width="144"
               Click="ButtonBase_OnClick" />
        <Button Content="OpenTestPlanDetailView" HorizontalAlignment="Left" Height="35" Margin="521,72,0,0" VerticalAlignment="Top" Width="144" Click="Button_Click" />


        <Ellipse Name="ECT" HorizontalAlignment="Left" Height="348" Margin="121,205,0,0" Stroke="#FFC79C9C" VerticalAlignment="Top" Width="351" 
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-719.969"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Images/Image1.png" Stretch="Fill"></ImageBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Label Content="Loading..." HorizontalAlignment="Left" Height="60" Margin="225,355,0,0" VerticalAlignment="Top" Width="160" FontSize="36" Foreground="White"/>



    </Grid>
</Window>
